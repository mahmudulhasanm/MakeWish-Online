<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd"
    tools:context=".Courses">
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="UselessParent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/banner_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/content"
            android:orientation="vertical"
            android:layout_margin="10sp"
            android:padding="10sp"
            android:id="@+id/collection"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="17sp"
                android:fontFamily="@font/opensense"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:text="@string/app_development"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginLeft="15sp"
                android:textSize="16sp"
                android:fontFamily="@font/opensense"
                android:layout_marginTop="10sp"
                android:textStyle="normal"
                android:text="@string/android_app_dev"
                android:layout_marginStart="15sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@drawable/circle3"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:id="@+id/contact"
                android:layout_marginTop="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="100sp"
                    android:layout_height="70sp"
                    android:padding="5sp"
                    android:layout_gravity="center"
                    android:src="@drawable/andriodapp"
                    android:contentDescription="@string/img" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_marginRight="20sp"
                    android:fontFamily="@font/opensense"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/contact_us"
                    android:layout_marginEnd="20sp" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/opensense"
                android:textColor="#3F51B5"
                android:text="@string/course"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="16sp"
                android:fontFamily="@font/opensense"
                android:layout_marginTop="10sp"
                android:textStyle="normal"
                android:text="@string/finish"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="17sp"
                android:fontFamily="@font/opensense"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:text="@string/more_apps"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10sp"
                    android:id="@+id/topbrowser"
                    android:layout_height="wrap_content"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:layout_width="60sp"
                        android:layout_gravity="center"
                        android:layout_height="60sp"
                        android:src="@drawable/top"
                        android:contentDescription="@string/img" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:text="@string/top_browser"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="40sp"
                    android:id="@+id/turbovpn"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40sp"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:layout_width="60sp"
                        android:layout_gravity="center"
                        android:layout_height="60sp"
                        android:src="@drawable/turbo"
                        android:contentDescription="@string/img" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:text="@string/turbo_vpn"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/content"
            android:orientation="vertical"
            android:layout_margin="10sp"
            android:padding="10sp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="17sp"
                android:fontFamily="@font/opensense"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:text="@string/_2_web_development"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginLeft="15sp"
                android:textSize="16sp"
                android:fontFamily="@font/opensense"
                android:layout_marginTop="10sp"
                android:textStyle="normal"
                android:text="@string/web_dev"
                android:layout_marginStart="15sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@drawable/circle3"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:id="@+id/contact2"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="100sp"
                    android:layout_height="70sp"
                    android:padding="5sp"
                    android:layout_gravity="center"
                    android:src="@drawable/wp"
                    android:contentDescription="@string/img" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_marginRight="20sp"
                    android:fontFamily="@font/opensense"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/contact_us"
                    android:layout_marginEnd="20sp" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/opensense"
                android:textColor="#3F51B5"
                android:text="@string/what_do_you_achieve_from_this_course"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="16sp"
                android:fontFamily="@font/opensense"
                android:layout_marginTop="10sp"
                android:textStyle="normal"
                android:text="@string/wordpress_site_for_buyer"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>
</LinearLayout>